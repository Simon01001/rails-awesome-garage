<div class="sign_container">
  <h1>Cars in this garage:</h1>
</div>

<div class="car_cards">
  <% @cars.each do |car| %>
    <div class="individual_card">
      <%= image_tag "placeholder_car.jpg" %>
      <div class="card_description">
        <h2><%= link_to car.brand.capitalize, car_path(car), class: "car_link" %></h2>
        <h3>Model: <%= car.model %></h3>
      </div>
    </div>
  <% end %>
</div>
